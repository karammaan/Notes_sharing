<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_book"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_rect">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first_layout"

            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image_book"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:id="@+id/image_edit"
                android:background="@drawable/rounded_rect"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:textColorHint="#000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:background="@null"
                android:id="@+id/name_id"
                android:layout_below="@id/image_edit"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/name_id"
                android:id="@+id/view_name1"></View>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:textColorHint="#000"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:background="@null"
                android:id="@+id/email_id"
                android:layout_below="@id/view_name1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/email_id"
                android:id="@+id/view_name2"></View>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Mobile Number"
                android:textColorHint="#000"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:background="@null"
                android:id="@+id/mobile_id"
                android:layout_below="@id/view_name2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/mobile_id"
                android:id="@+id/view_name3"></View>


     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/view_name3"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="20dp"
         android:text="done"
         android:textColor="#000"
         android:textSize="10dp"
         android:background="#ccc"
         android:onClick="done"
         android:id="@+id/button_done"
         />




        </RelativeLayout>


</RelativeLayout>
</RelativeLayout>